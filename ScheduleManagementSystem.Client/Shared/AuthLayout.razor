@inherits LayoutComponentBase

<div class="auth-container">
    <header>
        <div class="auth-header">
            <div class="logo">Schedule Management System</div>
            <div class="university-name">Lviv Polytechnic National University</div>
        </div>
    </header>

    <main class="unauthenticated-main">
        <div class="content-wrap">
            @Body
        </div>
    </main>

    <footer>
        &copy; @DateTime.Now.Year Schedule Management System | Lviv Polytechnic National University
    </footer>
</div>

<style>
    .auth-header {
        text-align: center;
    }

        .auth-header .logo {
            font-size: 24px;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 8px;
        }

        .auth-header .university-name {
            font-size: 16px;
            color: var(--secondary);
            font-weight: 500;
        }
</style>